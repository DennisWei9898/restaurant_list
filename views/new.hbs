<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>

</header>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">餐廳名字</label>
      <div class="col-sm-10">
        <input type="text" placeholder="餐廳名字" name="name" id="name" value="{{ restaurant.name }}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Restaurant Name</label>
      <div class="col-sm-10">
        <input type="text" placeholder="英文名字" name="name_en" id="name_en" value="{{ restaurant.name_en}}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <input type="text" placeholder="餐廳類別" name="category" id="category" value="{{ restaurant.category }}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">圖片</label>
      <div class="col-sm-10">
        <input type="text" placeholder="圖片網址" name="image" id="image" value="{{ restaurant.image }}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">地址</label>
      <div class="col-sm-10">
        <input type="text" placeholder="餐廳地址" name="location" id="location" value="{{ restaurant.location}}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">電話</label>
      <div class="col-sm-10">
        <input type="text" placeholder="餐廳電話" name="phone" id="phone" value="{{ restaurant.phone}}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">google map</label>
      <div class="col-sm-10">
        <input type="text" placeholder="google map" name="google_map" id="google_map" value="{{ restaurant.google_map}}"
          required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label"> 評分</label>
      <div class="col-sm-10">
        <input type="text" placeholder="評分" name="rating" id="rating" value="{{ restaurant.rating}}" required>
      </div>
    </div>
    <div class="row mb-3 mt-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">敘述</label>
      <div class="col-sm-10">
        <input type="text" placeholder="介紹" name="description" id="description" value="{{ restaurant.description}}"
          required>

      </div>
    </div>
    <button type="submit">Save</button>
    <form action="/" method="GET" style="display: inline;">
      <button type="submit">Back</button>
    </form>
  </form>
</div>